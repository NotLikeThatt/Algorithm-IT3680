package daysofcode;

public class Primality {

	/**
	 * Worst: O(n) algorithm
	 */
	static boolean isPrimeWorst(int n) {
		if (n < 2) {
			return false;
		}
		for (int i = 2; i < n; i++) {
			if (n % i == 0) {
				return false;
			}
		}
		return true;
	}

	/**
	 * Worst: O(n) algorithm
	 */
	static boolean isPrimeLessWorst(int n) {
		if (n < 2) {
			return false;
		}
		for (int i = 2; i < n / 2; i++) {
			if (n % i == 0) {
				return false;
			}
		}
		return true;
	}

	static boolean isPrimeGood(int n) {
		if (n < 2) {
			return false;
		}
		if (n != 2 && n % 2 == 0) {
			return false;
		}
		for (int i = 3; i * i <= n; i++) {
			if (n % i == 0) {
				return false;
			}
		}
		return true;
	}

	/**
	 * Best: O( n^(1/2) ) Algorithm
	 */
	static boolean isPrimeBest(int n) {
		if (n < 2) {
			return false;
		}
		if (n != 2 && n % 2 == 0) {
			return false;
		}
		for (int i = 3; i * i <= n; i += 2) {
			if (n % i == 0) {
				return false;
			}
		}
		return true;
	}
}
