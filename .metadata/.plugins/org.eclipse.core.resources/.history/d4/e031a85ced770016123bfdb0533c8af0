package day_2;

import java.io.FileInputStream;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;

public class Add {
	public static final String PATH_INPUT_FILE = "D:\\Add\\Test";
	public static final String PATH_OUPUT_FILE = "D:\\Add\\Test";

	public static void main(String[] args) throws IOException {
		for (int i = 1; i <= 10; i++) {
			String pathIn = PATH_INPUT_FILE;
			String pathOut = PATH_OUPUT_FILE;
			if (i != 10) {
				pathIn += "0" + i + "\\Add.inp";
				pathOut += "0" + i + "\\Add.out";
			} else {
				pathIn += i + "\\Add.inp";
				pathOut += i + "\\Add.out";
			}
			System.setIn(new FileInputStream(pathIn));
			Scanner scanner = new Scanner(System.in);
			int a = scanner.nextInt();
			int b = scanner.nextInt();
			try (PrintWriter writer = new PrintWriter(new FileWriter(pathOut, false), true)) {
				writer.print(a + b);
			}
			System.out.println(a + b);
			scanner.close();
		}
	}
}
