package day_4;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class EightQueens {
	private static boolean[][] board = new boolean[8][8];

	public static void main(String[] args) throws FileNotFoundException {
		// Khoi tao gia tri ban dau
		for (int row = 0; row < 8; row++) {
			for (int col = 0; col < 8; col++) {
				board[row][col] = false;
			}
		}

		// Doc tung dong, kiem tra tung dong
		System.setIn(new FileInputStream("input_8queens.txt"));
		Scanner scanner = new Scanner(System.in);
		boolean isValid = true;
		for (int row = 0; row < 8; row++) {
			String line = scanner.nextLine();
			for (int col = 0; col < 8; col++) {
				int numChar = 0;
				if (line.charAt(col) == '*') {
					numChar++;
					board[row][col] = true;
					if (numChar > 1) {
						isValid = false;
						break;
					}
				}
			}
			if (!isValid) {
				break;
			}
		}
		scanner.close();
		// Neu mot dong chua nhieu hon 1 dau * thi ket thuc
		if (!isValid) {
			System.out.println("invalid");
			return;
		}
		
		for (int i = 0; i < 8; i++) {
			for (int j = 0; j < 8; j++) {
				// Kiem tra tung cot
				int numCharInCol = 0;
				if (board[j][i]) {
					numCharInCol++;
					if (numCharInCol > 1) {
						isValid = false;
						break;
					}
				}
			}
			if (!isValid) {
				break;
			}
		}
		// Neu mot cot chua nhieu hon 1 dau * thi ket thuc
		if (!isValid) {
			System.out.println("invalid");
			return;
		}
	}
	
	public static boolean isValid(){
		
		return true;
	}
}
