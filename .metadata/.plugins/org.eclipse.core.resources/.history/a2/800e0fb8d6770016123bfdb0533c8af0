package adapter;

import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.Random;
import java.util.Scanner;

public class InitInput {
	public static final String PATH_OUPUT_FILE = "D:\\LWS\\LWS";

	public static void main(String[] args) throws IOException {
		Scanner inp = new Scanner(System.in);
		for (int index = 1; index <= 10; index++) {
			System.out.print("Nhập số phần tử: ");
			String path = PATH_OUPUT_FILE;
			int numberOfInteger = Integer.parseInt(inp.nextLine());
			if (index != 10) {
				path += "0" + index + ".inp";
			} else {
				path += index + ".inp";
			}
			try (PrintWriter writer = new PrintWriter(new FileWriter(path, false), true)) {
				writer.println(numberOfInteger);
				Random random = new Random();
				for (int i = 0; i < numberOfInteger; i++) {
					String token = "";
					double d = Math.sqrt(random.nextInt(Integer.MAX_VALUE));
					token += Math.round(d * 100.00) / 100.00;
					if (i != numberOfInteger - 1) {
						token += " ";
					}
					writer.print(token);
				}
				System.out.println("Done: " + index);
			} catch (IOException e) {
				System.out.println(e.getMessage());
				System.exit(1);
			}
		}
		inp.close();
	}
}
